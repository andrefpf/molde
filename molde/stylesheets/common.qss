QWidget {
    font-family: sans-serif;
    background-color: @background;
    color: @on-background;
    border-color: @border-color;
}

QWidget::disabled {
    background-color: @disabled-background;
    color: @disabled-color;
}

QWidget:focus {
    outline: 0;
    border: 2px solid @primary-darker;
    border-radius: @border-radius;
}
